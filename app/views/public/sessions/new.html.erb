<div class="col-3 m-auto">
  <h2>ログイン</h2>
  <%= render 'layouts/flash_message' %>

<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary mt-2" %>
  </div>
<% end %>

<div class="row">
  <%= link_to "ゲストログイン", users_guest_sign_in_path, class: "btn btn-secondary m-3 sign_in", method: :post %>
</div>

<%= render "public/shared/links" %>
</div>