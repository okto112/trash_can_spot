<% if spot.favorited_by?(current_user) %>
  <%= link_to public_favorite_path(spot.id), method: :delete, remote: true, data: {"turbolinks" => false} do %>
    <i id="favorite_btn_on" class="fa-solid fa-star"></i>
  <% end %>
<% else %>
  <%= link_to public_favorites_path(spot_id: spot.id), method: :post, remote: true, data: {"turbolinks" => false} do %>
    <i id="favorite_btn_off" class="fa-solid fa-star"></i>
  <% end %>
<% end %>
