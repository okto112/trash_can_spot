<div class="col">
  <h2 class="p-2 bg-secondary text-white mb-5 text-center"><%= @user.name %>さんのユーザー詳細</h2>

  <table>
    <tbody>
      <tr>
        <td style="width: 40%">ユーザーID</td>
        <td style="width: 40%"><%= @user.id %></td>
      </tr>

      <tr>
        <td>ユーザーネーム</td>
        <td><%= @user.name %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>

      <tr>
        <td>パスワード</td>
        <td><%= @user.encrypted_password %></td>
      </tr>

      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @user.is_active == true %>
            <p class="text-success font-weight-bold">有効</p>
          <% else %>
            <p class="text-danger font-weight-bold">退会</p>
          <% end %>
        </td>
      </tr>

      <tr>
        <td></td>
        <td>
          <%= link_to '編集する', edit_admin_user_path, class:"btn btn-success" %>
        </td>
        <td>
          <%= link_to '登録されたスポットを見る', class:"btn btn-primary" %>
          <%= link_to '投稿されたコメントを見る', class:"btn btn-primary" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>