<div class="col">
  <h2 class="mb-2 text-center"><%= User.find(@comment.user_id).name %>さんのコメント編集</h2>

  <div class="col mb-4">
    <div id="comment-map" class="m-auto"></div>
  </div>

  <div class="row">
    <div class="col-5 m-auto">
      <%= form_with model: @comment, url: admin_comment_path(@comment) do |f| %>

        <h3>コメント内容：</h3>
        <%= render 'layouts/validate_errors', data: @comment %>
        <div class="ml-4 mb-2">
            <%= f.text_area :comment, id: "comment_form_area", placeholder: "例：大きなゴミ箱があります！" %>
        </div>

        <%= f.hidden_field :user_id, :value => @comment.user_id %>
        <%= f.hidden_field :spot_id, :value => @spot.id  %>
        <div class="text-center">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
           <i class="fa-solid fa-floppy-disk"> 変更内容を保存</i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


