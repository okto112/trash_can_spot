<div class="col-3 m-auto">
  <div class="mt-4 pt-4 pb-5 text-center border rounded">
    <h2 class="m-4 border-bottom border-primary">ログイン</h2>
    <%= render 'layouts/flash_message' %>

    <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
      <div class="field">
        <%= f.label :email, "ログインID：" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード：" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "パスワードを保存する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-primary mt-4 w-50" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </div>
</div>
