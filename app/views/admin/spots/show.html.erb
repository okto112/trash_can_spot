  //初期マップの設定
  let map;
  let marker
  async function initMap() {
    const { Map } = await google.maps.importLibrary("maps");

    map = new google.maps.Map(document.getElementById('map'), {
      center:  { lat: <%= @spot.latitude %>, lng: <%= @spot.longitude %> },
      zoom: 15,
      mapTypeControl: false
    });

    initializeMarker();
  }

