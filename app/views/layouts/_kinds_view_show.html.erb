<% @spot.spot_kinds.each do |spot_kind| %>
  <% case spot_kind.kind.color %>
    <% when 'white' %>
      <p class='spot-kind white'><%= spot_kind.kind.name %></p>
    <% when 'gray' %>
      <p class='spot-kind gray'><%= spot_kind.kind.name %></p>
    <% when 'red' %>
      <p class='spot-kind red'><%= spot_kind.kind.name %></p>
    <% when 'purple' %>
      <p class='spot-kind purple'><%= spot_kind.kind.name %></p>
    <% when 'blue' %>
      <p class='spot-kind blue'><%= spot_kind.kind.name %></p>
    <% when 'yellow' %>
      <p class='spot-kind yellow'><%= spot_kind.kind.name %></p>
    <% when 'green' %>
      <p class='spot-kind green'><%= spot_kind.kind.name %></p>
    <% when 'orange' %>
      <p class='spot-kind orange'><%= spot_kind.kind.name %></p>
    <% when 'pink' %>
      <p class='spot-kind pink'><%= spot_kind.kind.name %></p>
    <% when 'brown' %>
      <p class='spot-kind brown'><%= spot_kind.kind.name %></p>
  <% end %>
<% end %>